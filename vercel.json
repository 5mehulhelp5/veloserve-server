{
  "outputDirectory": "website",
  "rewrites": [
    { "source": "/(.*)", "destination": "/" }
  ],
  "redirects": [
    { "source": "/github", "destination": "https://github.com/veloserve/veloserve", "permanent": true },
    { "source": "/docs", "destination": "https://docs.veloserve.io", "permanent": true },
    { "source": "/docs/:path*", "destination": "https://docs.veloserve.io/:path*", "permanent": true },
    { "source": "/try", "destination": "https://ona.com/#https://github.com/veloserve/veloserve", "permanent": true },
    { "source": "/download", "destination": "https://github.com/veloserve/veloserve/releases", "permanent": true }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" }
      ]
    },
    {
      "source": "/(.*).css",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/(.*).js",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
